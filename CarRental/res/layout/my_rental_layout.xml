<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:text="October 1, 2014"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:text="Car Type: Compact"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:text="Rental Type: Daily (P 2,285)"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:text="Car Model: Ferrari"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:text="Pick-up Time: 9:00 am"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:text="Return Date: October 10, 2014"
        android:textSize="13dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Return Time: 9:00 am"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13dp"
        android:typeface="sans" />
    
</RelativeLayout>